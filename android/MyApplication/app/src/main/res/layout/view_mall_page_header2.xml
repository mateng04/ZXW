<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <EditText
            android:id="@+id/et_mall_page_header_sousuo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/search_background"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入商品关键字"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"
            android:textSize="12dp" />

        <Button
            android:id="@+id/bt_mall_page_header_sousuo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/button_bg"
            android:text="商品搜索"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <Button
            android:id="@+id/bt_mall_page_header_fbsp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/button_bg"
            android:text="发布商品"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/activity_bg">

        <TextView
            android:id="@+id/tv_mall_header_wssc"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:background="@color/red"
            android:gravity="center"
            android:padding="10dp"
            android:text="网上商城"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_mall_header_wszq"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_toRightOf="@id/tv_mall_header_wssc"
            android:gravity="center"
            android:padding="10dp"
            android:text="微商专区"
            android:textColor="@color/black" />

        <RelativeLayout
            android:id="@+id/rl_mall_header_screen"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/list_view_item_bg">

            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@color/gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/list_view_item_bg"
                android:drawablePadding="-5dip"
                android:drawableRight="@mipmap/ic_screen"
                android:paddingRight="5dip"
                android:text="筛选"
                android:textColor="#333333"
                android:textSize="14dp"
                android:clickable="false"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_mall_header_gwc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/rl_mall_header_screen"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_gwc" />
            <TextView
                android:id="@+id/tv_mall_page_header_gwc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="0"
                android:textColor="@color/red" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/red" />
    </RelativeLayout>
</LinearLayout>
